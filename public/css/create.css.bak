.create-container {
    max-width: 700px;
    margin: 50px auto;
    padding: 40px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    font-family: 'Inter', sans-serif;
}

.create-title {
    font-size: 2rem;
    color: #4B4B4B;
    margin-bottom: 30px;
    text-align: center;
}

.create-form .form-group {
    margin-bottom: 25px;
}

.create-form label {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
    color: #4B4B4B;
}

.required-badge {
    color: red;
    font-size: 0.9rem;
    margin-left: 5px;
}

.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.error-message {
    color: red;
    font-size: 0.9rem;
    margin-top: 5px;
}

.season-options {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.season-option {
    background: #E0DFDE;
    border: 1px solid #4B4B4B;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
}

.season-option input {
    margin-right: 5px;
}

.form-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;
}

.cancel-btn {
    padding: 10px 20px;
    background-color: #ccc;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    color: #fff;
}

.submit-btn {
    padding: 10px 20px;
    background-color: #FFA929;
    border: none;
    border-radius: 5px;
    color: #fff;
    font-weight: bold;
}

.file-label {
    display: inline-block;
    padding: 5px 10px;
    background-color: #E0DFDE;
    color: #4B4B4B;
    font-size: 1rem;
    border: 1px solid #4B4B4B;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.3s;
    border-radius: 0;
    margin-bottom: 5px;
    max-width: 200px;
}

.file-input {
    display: block;
    margin-top: 10px;
}

.image-preview-container {
    margin-bottom: 10px;
}

.image-preview {
    max-width: 100%;
    height: auto;
    border: 1px solid #ccc;
    margin-bottom: 5px;
}

.image-filename {
    font-size: 0.9rem;
    color: #666;
}